#Rock paper scissors:
import random
print("Welcome to rock paper scissors")
while True:
    move = input("Do you want: Rock, Paper, or Scissors? ")
    moves = ["Rock", "Paper", "Scissors"]
    ai_move = random.choice(moves)
    print(ai_move)
    if move == "Rock":
        if ai_move == "Scissors":
            print("You won!")
        if ai_move == "Paper":
            print("You lost :(")
        if ai_move == "Rock":
            print("It's a tie")
    if move == "Paper":
        if ai_move == "Scissors":
            print("You lost :(")
        if ai_move == "Paper":
            print("It's a tie")
        if ai_move == "Rock":
            print("You won!")
    if move == "Scissors":
        if ai_move == "Scissors":
            print("It's a tie")
        if ai_move == "Paper":
            print("You won!")
        if ai_move == "Rock":
            print("You lost :(")



